root = true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
tab_width=2
indent_size=2
indent_brace_style=K&R
spaces_around_operators=true
continuation_indent_size=2
max_line_length=120

[{.babelrc,.stylelintrc,jest.config,.eslintrc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_size=2

[{*.applejs,*.js}]
trim_trailing_whitespace=true
indent_size=2

[*.less]
indent_size=2

[{*.yml,*.yaml}]
indent_size=2
